{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "noEmit": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./lib",
    "declaration": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*","tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
